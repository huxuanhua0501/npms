@charset "UTF-8";

.bg-black{
    background-color: #181C1F;
}
.login-head{ /*顶部*/
    width: 100%;
    height: 60px;
    border-bottom: #5D6062 solid 1px;
    line-height: 60px;
    padding-left: 20px;
    box-sizing: border-box;
}
.login-logo{ /*logo*/
    height: 24px;
}
.login-content{
    margin: 0px auto;
    height: 580px;
    width: 990px;
    padding-top: 10%;
    padding-bottom: 70px;
    box-sizing: border-box;
}
.login-ad{ /*广告*/
    width: 610px;
    color: #ffffff;
    padding: 80px 0px;
    float: left;
    display: block;
}
.slogan-padding{ /*标语*/
    padding-top: 3px;
    padding-bottom: 3px;
}
.login-bar{ /*登录区域*/
    width: 380px;
    height: 380px;
    float: right;
    display: block;
    background-color: #ffffff;
    padding: 25px;
    box-sizing: border-box;
}
.hint{
    width: 100%;
    text-align: right;
    padding: 12px 0px;
}
.login-other{
    width: 22px;
    height: 22px;
    cursor: pointer;
}